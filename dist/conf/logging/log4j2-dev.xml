<?xml version="1.0" encoding="UTF-8"?>

<!-- Don't forget to set system property -DLog4jContextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector to make all loggers asynchronous. -->
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-30c{1} | %-30t | %-5p | %d{HH:mm:ss} | %m%n"/>
        </Console>

        <RollingRandomAccessFile name="ALL" fileName="${sys:logPath}/all/all.log"
                                 filePattern="${sys:logPath}/all/all-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout pattern="%-30c{1} | %-10t | %-5p | %d{HH:mm:ss} | %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="EXCEPTIONS" fileName="${sys:logPath}/exceptions/exceptions.log"
                                 filePattern="${sys:logPath}/exceptions/exceptions-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout pattern="%-30c{1} | %-10t | %-5p | %d{HH:mm:ss} | %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="ALL"/>
        </Root>
        <Logger name="exc" level="ERROR"/>
        <Logger name="exc" level="ERROR">
            <AppenderRef ref="EXCEPTIONS"/>
        </Logger>

        <Logger name="io.netty" level="ERROR"/>
        <Logger name="io.grpc.netty" level="INFO"/>
        <Logger name="org.apache.http" level="ERROR"/>
        <Logger name="org.eclipse.jetty" level="ERROR"/>
        <Logger name="ws.wamp.jawampa" level="ERROR"/>
        <Logger name="util" level="INFO"/>
        <Logger name="com.tars.util.net.ws" level="INFO"/>
        <Logger name="com.amazonaws" level="ERROR"/>

        <Logger name="bitfinex" level="INFO"/>
        <Logger name="app" level="INFO"/>
        <Logger name="cpu" level="INFO"/>
        <Logger name="net" level="INFO"/>
        <Logger name="pusher" level="INFO"/>
        <Logger name="orderSync" level="INFO"/>
    </Loggers>

</Configuration>